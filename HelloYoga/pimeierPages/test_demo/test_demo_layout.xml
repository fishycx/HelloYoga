<?xml version="1.0" encoding="UTF-8"?>
<!-- 测试页面：展示各种布局和样式功能 -->
<container 
    flexDirection="column" 
    width="100%" 
    height="100%" 
    backgroundColor="systemBackground">
    
    <!-- 顶部导航栏 -->
    <view 
        height="122" 
        backgroundColor="#007AFF" 
        flexDirection="row" 
        alignItems="flexEnd" 
        paddingBottom="12"
        paddingLeft="20"
        paddingRight="20">
        <text 
            text="{{ viewModel.navTitle }}"
            fontSize="20"
            fontWeight="bold"
            color="white"/>
    </view>
    
    <!-- 主内容区域 - ListView -->
    <list-view dataSource="viewModel.todoList" flexGrow="1" width="100%" backgroundColor="#F2F2F7" padding="10" paddingTop="10" paddingBottom="10">
        
        <!-- 模板 1: 标准 Item (title + subtitle, 高度 70) -->
        <template type="item">
            <view 
                width="100%" 
                height="70" 
                backgroundColor="white" 
                cornerRadius="12"
                justifyContent="center"
                paddingLeft="15"
                paddingRight="15">
                <text 
                    text="{{ item.title }}" 
                    fontSize="16" 
                    fontWeight="bold" 
                    color="#333333"/>
                <text 
                    text="{{ item.subtitle }}" 
                    fontSize="12" 
                    color="#8E8E93" 
                    marginTop="4"/>
            </view>
        </template>
        
        <!-- 模板 2: Header (标题样式, 高度 50) -->
        <template type="header">
            <view 
                width="100%" 
                height="50" 
                backgroundColor="#E3F2FD" 
                cornerRadius="8"
                justifyContent="center"
                paddingLeft="15"
                paddingRight="15">
                <text 
                    text="{{ item.title }}" 
                    fontSize="18" 
                    fontWeight="bold" 
                    color="#1976D2"/>
            </view>
        </template>
        
        <!-- 模板 3: Button (按钮样式, 高度 60) -->
        <template type="button">
            <view 
                width="100%" 
                height="60" 
                backgroundColor="white" 
                cornerRadius="12"
                justifyContent="center"
                alignItems="center"
                paddingLeft="15"
                paddingRight="15">
                <button 
                    width="100%"
                    height="44"
                    title="{{ item.title }}"
                    titleColor="white"
                    backgroundColor="#007AFF"
                    cornerRadius="8"
                    onClick="{{ item.onClick }}"/>
            </view>
        </template>
        
        <!-- 模板 4: Switch (开关样式, 高度 50) -->
        <template type="switch">
            <view 
                width="100%" 
                height="50" 
                backgroundColor="white" 
                cornerRadius="12"
                flexDirection="row"
                justifyContent="spaceBetween"
                alignItems="center"
                paddingLeft="15"
                paddingRight="15">
                <text 
                    text="{{ item.title }}" 
                    fontSize="16" 
                    color="#333333"/>
                <text 
                    text="{{ item.switchValue ? 'ON' : 'OFF' }}" 
                    fontSize="14" 
                    color="{{ item.switchValue ? '#34C759' : '#8E8E93' }}"
                    marginRight="10"/>
            </view>
        </template>
        
        <!-- 模板 5: Large (大卡片样式, 高度 120) -->
        <template type="large">
            <view 
                width="100%" 
                height="120" 
                backgroundColor="white" 
                cornerRadius="12"
                padding="15"
                flexDirection="column"
                justifyContent="spaceBetween">
                <view flexDirection="row" alignItems="center">
                    <text 
                        text="{{ item.title }}" 
                        fontSize="20" 
                        fontWeight="bold" 
                        color="#333333"
                        flex="1"/>
                    <view 
                        backgroundColor="#FF3B30"
                        paddingLeft="8"
                        paddingRight="8"
                        paddingTop="4"
                        paddingBottom="4"
                        cornerRadius="10"
                        justifyContent="center"
                        alignItems="center">
                        <text 
                            text="{{ item.badge }}" 
                            fontSize="12" 
                            color="white"/>
                    </view>
                </view>
                <text 
                    text="{{ item.subtitle }}" 
                    fontSize="14" 
                    color="#8E8E93"/>
                <text 
                    text="{{ item.description }}" 
                    fontSize="12" 
                    color="#999999"
                    marginTop="4"/>
            </view>
        </template>
        
        <!-- 模板 6: Compact (紧凑样式, 高度 40) -->
        <template type="compact">
            <view 
                width="100%" 
                height="40" 
                backgroundColor="white" 
                cornerRadius="8"
                flexDirection="row"
                alignItems="center"
                paddingLeft="15"
                paddingRight="15">
                <text 
                    text="{{ item.title }}" 
                    fontSize="14" 
                    color="#666666"
                    flex="1"/>
                <text 
                    text="{{ item.value }}" 
                    fontSize="14" 
                    fontWeight="medium"
                    color="#333333"/>
            </view>
        </template>
        
    </list-view>
    
    <!-- 底部信息栏 -->
    <view 
        height="60" 
        backgroundColor="#F5F5F5"
        justifyContent="center"
        alignItems="center"
        borderWidth="1"
        borderColor="#E0E0E0">
        <text 
            text="{{ viewModel.footerInfo }}"
            fontSize="12"
            color="#999999"
            textAlign="center"/>
    </view>
    
</container>
